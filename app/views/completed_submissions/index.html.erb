<% content_for :main_title do %>
  Completed Submissions
<% end %>
<%= form_tag(controller: "completed_submissions", action: "print", method: "post") do %>

<div class="row">
  <div class="col-md-offset-8 col-md-4 text-right">
    <b>Printer:</b>
    <%= collection_select(:printer, :name, @printers, :name, :name, {},
        { style: "margin-left: 5px; width: 80px;", class: "printer_select", id: "printer_name_top"}) %>
    <%= submit_tag("Print", class: 'btn btn-primary', style: 'margin-left: 10px;', id: "print_button_top") %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h2>Completed Submissions</h2>
    <%= render "completed_submission_table", completed_submissions: @unprinted_submissions %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h2>Previously Printed Submissions</h2>
    <%= render "completed_submission_table", completed_submissions: @printed_submissions %>
  </div>
</div>

<div class="row">
  <div class="col-md-offset-8 col-md-4 text-right" style="padding-bottom:10px;">
    <b>Printer:</b>
    <%= collection_select(:printer, :name, @printers, :name, :name, {},
        { style: "margin-left: 5px; width: 80px;", class: "printer_select", id: "printer_name_bottom" }) %>
    <%= submit_tag("Print", class: 'btn btn-primary', style: 'margin-left: 10px;', id: "print_button_bottom") %>
  </div>
</div>

<% end %>
