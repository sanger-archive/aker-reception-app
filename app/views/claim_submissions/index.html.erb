<% content_for :title_button do %>
  <%= link_to 'To Submission', material_submissions_path, class: 'btn btn-info vcenter', style: 'margin-top: 28px' %>
<% end %>

<% content_for :main_title do %>
  Claim Submissions
<% end %>

<div class="container">
<div class="claiming-display row">

  <div class="col-md-4">
    <div class="row">
      <div class="row">
        <div class="email-input">
          <%= bootstrap_form_tag(url: find_submissions_by_user_path, remote: true, html: {:class => ''}) do |f| %>
            <div class="">
            	<%= f.email_field :email, value: '', autocomplete: 'off' %>
              <%= f.submit 'Login' %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="submission-list">
          <table class="table" data-toggle="table">
            <thead>
            <tr>
              <th data-field="id"> Id </th>
              <th data-field="created_at">Created at </th>
              <!-- th data-field="status">Status</th -->
              <th data-field="no_of_labwares_required"># items</th>
              <th data-field="state" data-checkbox="true"></th>
            </tr>
            </thead>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="claimed-sets" data-service-url="/get_all_collections" 
    data-psd-component-class="DragAndDrop" 
    data-psd-component-parameters='{"cssDropable": "tbody tr"}'
    >
        <table data-toggle="table" class="table">
            <thead>
            <tr>
                <th data-field="name">Collection Name </th>
                <th data-field="uuid">UUID</th>
                <th data-field="claim">Claim</th>
            </tr>
            </thead>
          </table>    
    </div>
  </div>
</div>
<script type="text/javascript">

</script>
  </div>

</div>